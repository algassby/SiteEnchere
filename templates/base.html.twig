<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet"/>
        <link href="{{ asset('css/dataTables.min.css') }}" rel="stylesheet"/>
        <link href="{{ asset('jquery.dataTables.min.css') }}" rel="stylesheet"/>
    {% endblock %}
</head>
<body>
{% block header %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
        <div class="container">
            <a class="navbar-brand" href="{{ path('index') }}">Vente Enchere</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('index') }}">Acceuil
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    {% if app.user %}

                    <li class="nav-item">
                        <a class="nav-link" href="{{path('utilisateur_index')}}">Utilisateur</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"  href="{{ path('achat_index') }}">Achat</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"  href="{{ path('pack_jeton_index') }}">Pack Jeton</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"  href="{{ path('produit_index') }}">Produit</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link"  href="{{ path('enchere_index') }}">Enchere</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"  href="{{ path('historique_enchere_index') }}">Historique Enchere</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('utilisateur_new')}}">Creer votre compte</a>
                    </li>
                    {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('utilisateur_new')}}">Creer votre compte</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"  href="{{ path('app_login') }}">Log in</a>
                    </li>

                </ul>
                {% endif %}

            </div>
        </div>
    </nav>
{%  endblock %}
{% block body %}

{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/jquery.slim.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
{% endblock %}

</body>
</html>
